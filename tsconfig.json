{
  "ecmaFeatures": {
    "jsx": true
  },
  "ecmaVersion": 11,
  "sourceType": "module",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ESNext",
    "jsx": "react",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "app/javascript",
    "paths": {
      "@/*": ["*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
